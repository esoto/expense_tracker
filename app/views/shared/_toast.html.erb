<div class="fixed top-4 right-4 z-50 max-w-sm w-full pointer-events-none">
  <div class="pointer-events-auto">
    <%
      # Determine colors based on type
      colors = case type
      when 'success'
        { bg: 'emerald-50', border: 'emerald-200', text: 'emerald-700', icon: 'emerald-600' }
      when 'error'
        { bg: 'rose-50', border: 'rose-200', text: 'rose-700', icon: 'rose-600' }
      when 'warning'
        { bg: 'amber-50', border: 'amber-200', text: 'amber-700', icon: 'amber-600' }
      else
        { bg: 'teal-50', border: 'teal-200', text: 'teal-700', icon: 'teal-600' }
      end
    %>

    <div class="bg-<%= colors[:bg] %> border border-<%= colors[:border] %> rounded-lg shadow-lg p-4 transform transition-all duration-300"
         data-controller="toast"
         data-toast-remove-delay-value="5000">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <% if type == 'success' %>
            <svg class="h-5 w-5 text-<%= colors[:icon] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          <% elsif type == 'error' %>
            <svg class="h-5 w-5 text-<%= colors[:icon] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          <% elsif type == 'warning' %>
            <svg class="h-5 w-5 text-<%= colors[:icon] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          <% else %>
            <svg class="h-5 w-5 text-<%= colors[:icon] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          <% end %>
        </div>
        <div class="ml-3 flex-1">
          <p class="text-sm font-medium text-<%= colors[:text] %>">
            <%= message %>
          </p>
        </div>
        <div class="ml-4 flex-shrink-0 flex">
          <button data-action="click->toast#remove"
                  class="inline-flex text-<%= colors[:text] %> hover:text-<%= colors[:text] %> focus:outline-none">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>