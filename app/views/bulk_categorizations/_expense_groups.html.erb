<div class="space-y-4">
  <% grouped_expenses.each do |group| %>
    <div id="expense_group_<%= group[:id] %>" 
         class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden"
         data-group-id="<%= group[:id] %>"
         data-expense-ids="<%= group[:expense_ids].to_json %>">
      
      <!-- Group Header -->
      <div class="px-6 py-4 border-b border-slate-200 bg-slate-50">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <h3 class="text-lg font-semibold text-slate-900">
              <%= group[:grouping_key] %>
            </h3>
            
            <!-- Confidence Badge -->
            <% confidence_level = group[:confidence] > 0.8 ? "high" : group[:confidence] > 0.6 ? "medium" : "low" %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                         <%= confidence_level == "high" ? "bg-emerald-100 text-emerald-800" : 
                             confidence_level == "medium" ? "bg-amber-100 text-amber-800" : 
                             "bg-rose-100 text-rose-800" %>">
              <%= (group[:confidence] * 100).round %>% confidence
            </span>
            
            <!-- Group Type Badge -->
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-700">
              <%= group[:grouping_type].to_s.humanize %>
            </span>
          </div>
          
          <div class="flex items-center space-x-2">
            <span class="text-sm text-slate-600">
              <%= group[:count] %> expense<%= "s" if group[:count] != 1 %>
            </span>
            <span class="text-sm font-semibold text-slate-900">
              ₡<%= number_with_delimiter(group[:total_amount].to_i) %>
            </span>
          </div>
        </div>
      </div>

      <!-- Suggested Category -->
      <% if group[:suggested_category] %>
        <div class="px-6 py-3 bg-teal-50 border-b border-teal-100">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-teal-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
              <span class="text-sm font-medium text-teal-900">
                Suggested: <%= group[:suggested_category].name %>
              </span>
              <% if group[:suggestion_confidence] %>
                <span class="text-xs text-teal-700">
                  (<%= (group[:suggestion_confidence] * 100).round %>% confidence)
                </span>
              <% end %>
            </div>
            
            <button data-action="click->bulk-categorization#applySuggestion"
                    data-category-id="<%= group[:suggested_category].id %>"
                    data-group-id="<%= group[:id] %>"
                    class="inline-flex items-center px-3 py-1.5 bg-teal-700 text-white text-sm font-medium rounded-lg hover:bg-teal-800 transition-colors">
              Apply Suggestion
            </button>
          </div>
        </div>
      <% end %>

      <!-- Actions Bar -->
      <div class="px-6 py-3 bg-white border-b border-slate-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <!-- Category Selector -->
            <select data-bulk-categorization-target="categorySelect"
                    data-group-id="<%= group[:id] %>"
                    class="block w-64 px-3 py-2 bg-white border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
              <option value="">Select a category...</option>
              <% @categories.each do |category| %>
                <option value="<%= category.id %>" 
                        <%= "selected" if group[:suggested_category] == category %>>
                  <%= category.parent ? "#{category.parent.name} → " : "" %><%= category.name %>
                </option>
              <% end %>
            </select>
            
            <!-- Apply Button -->
            <button data-action="click->bulk-categorization#applyCategory"
                    data-group-id="<%= group[:id] %>"
                    class="inline-flex items-center px-4 py-2 bg-teal-700 text-white text-sm font-medium rounded-lg hover:bg-teal-800 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Apply to All
            </button>
          </div>
          
          <div class="flex items-center space-x-2">
            <!-- Preview Button -->
            <button data-action="click->bulk-categorization#preview"
                    data-group-id="<%= group[:id] %>"
                    class="inline-flex items-center px-3 py-2 bg-white border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50 transition-colors">
              <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              Preview
            </button>
            
            <!-- Expand/Collapse Button -->
            <button data-action="click->bulk-categorization#toggleExpenses"
                    data-group-id="<%= group[:id] %>"
                    class="inline-flex items-center px-3 py-2 bg-white border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50 transition-colors">
              <svg class="w-4 h-4 transform transition-transform" 
                   data-bulk-categorization-target="expandIcon"
                   fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Expense Details (Collapsed by default) -->
      <div id="expenses_<%= group[:id] %>" 
           class="hidden"
           data-bulk-categorization-target="expenseList">
        <div class="px-6 py-4 space-y-3">
          <% group[:expenses].each do |expense| %>
            <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg">
              <div class="flex items-center space-x-3">
                <input type="checkbox" 
                       data-expense-id="<%= expense.id %>"
                       data-group-id="<%= group[:id] %>"
                       data-action="change->bulk-categorization#updateSelection"
                       checked
                       class="w-4 h-4 text-teal-700 border-slate-300 rounded focus:ring-teal-500">
                <div>
                  <p class="text-sm font-medium text-slate-900">
                    <%= expense.display_description %>
                  </p>
                  <p class="text-xs text-slate-600">
                    <%= expense.transaction_date.strftime("%b %d, %Y") %> • 
                    <%= expense.bank_name %>
                  </p>
                </div>
              </div>
              
              <div class="flex items-center space-x-3">
                <span class="text-sm font-semibold text-slate-900">
                  ₡<%= number_with_delimiter(expense.amount.to_i) %>
                </span>
                
                <!-- Individual Category Override -->
                <select data-expense-id="<%= expense.id %>"
                        data-action="change->bulk-categorization#overrideCategory"
                        class="block w-48 px-2 py-1 bg-white border border-slate-300 rounded text-xs focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                  <option value="">Use group category</option>
                  <% @categories.each do |category| %>
                    <option value="<%= category.id %>">
                      <%= category.parent ? "#{category.parent.name} → " : "" %><%= category.name %>
                    </option>
                  <% end %>
                </select>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>