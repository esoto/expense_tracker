<div id="flash">
  <% if notice.present? %>
    <div class="mb-4 bg-emerald-50 border border-emerald-200 text-emerald-700 px-4 py-3 rounded-lg relative" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>
  
  <% if alert.present? %>
    <div class="mb-4 bg-rose-50 border border-rose-200 text-rose-700 px-4 py-3 rounded-lg relative" role="alert">
      <span class="block sm:inline"><%= alert %></span>
    </div>
  <% end %>
</div>