        </svg>
      </div>
      <div>
        <p class="text-sm text-slate-600"><%= t('bulk_categorizations.statistics.total_groups') %></p>
        <p class="text-xl font-semibold text-slate-900"><%= statistics[:total_groups] %></p>
      </div>
    </div>

    <!-- Total Expenses -->
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
        <svg class="w-6 h-6 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
