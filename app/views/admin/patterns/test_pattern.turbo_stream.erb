<%= turbo_stream.replace "test_results" do %>
  <div class="space-y-4">
    <h3 class="text-lg font-semibold text-slate-900"><%= t('admin.patterns.test_results.title') %></h3>
    <% if @matching_patterns&.any? %>
      <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-4">
        <p class="text-emerald-700 font-medium mb-3"><%= t('admin.patterns.test_results.found_categories', count: @matching_patterns.length) %>:</p>

        <div class="space-y-3">
          <% @matching_patterns.each do |match| %>
            <div class="bg-white border border-emerald-200 rounded-lg p-4">
              <div class="flex justify-between items-start mb-2">
                <div>
                  <span class="px-2 py-1 text-xs rounded-full bg-teal-100 text-teal-700 font-medium">
                    <%= match[:category].name %>
                  </span>
                </div>
                <div class="text-right">
                  <div class="text-lg font-semibold text-slate-900">
                    <%= (match[:confidence] * 100).round(1) %>%
                  </div>
                  <div class="text-sm text-slate-600">
                    <%= t('admin.patterns.test_results.confidence') %>
                  </div>
                </div>
              </div>

              <div class="text-sm text-slate-600">
                <strong><%= t('admin.patterns.test_results.patterns_matched', count: match[:pattern_count]) %>:</strong> <%= t('admin.patterns.test_results.patterns_matched', count: match[:pattern_count]) %>
              </div>

              <% if match[:patterns].any? %>
                <div class="mt-2 space-y-1">
                  <% match[:patterns].each do |pattern| %>
                    <div class="text-xs bg-slate-50 px-2 py-1 rounded">
                      <span class="font-medium"><%= pattern.pattern_type.humanize %>:</span>
                      <%= pattern.pattern_value %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
        <p class="text-amber-700"><%= t('admin.patterns.test_results.no_matching_patterns') %></p>
      </div>
    <% end %>

    <% if @test_expense %>
      <div class="bg-slate-50 border border-slate-200 rounded-lg p-4">
        <h4 class="font-medium text-slate-900 mb-2"><%= t('admin.patterns.test_results.test_data_title') %>:</h4>
        <div class="text-sm text-slate-600 space-y-1">
          <div><strong><%= t('admin.patterns.test_results.merchant') %>:</strong> <%= @test_expense.merchant_name %></div>
          <div><strong><%= t('admin.patterns.test.description') %>:</strong> <%= @test_expense.description %></div>
          <div><strong><%= t('admin.patterns.test.amount') %>:</strong> <%= number_to_currency(@test_expense.amount) if @test_expense.amount %></div>
          <div><strong><%= t('admin.patterns.test_results.date') %>:</strong> <%= @test_expense.transaction_date&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>