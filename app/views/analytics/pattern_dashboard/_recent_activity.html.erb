<h2 class="text-lg font-semibold text-slate-900 mb-4">Recent Activity</h2>
<div class="space-y-2 max-h-96 overflow-y-auto">
  <% recent_activity.each do |activity| %>
    <div class="p-3 bg-slate-50 rounded-lg text-sm">
      <div class="flex items-center justify-between mb-1">
        <span class="text-xs text-slate-500">
          <%= time_ago_in_words(activity[:created_at]) %> ago
        </span>
        <span class="text-xs px-2 py-1 rounded-full <%= activity[:feedback_type] == 'accepted' ? 'bg-emerald-100 text-emerald-700' : activity[:feedback_type] == 'rejected' ? 'bg-rose-100 text-rose-700' : 'bg-amber-100 text-amber-700' %>">
          <%= activity[:feedback_type].capitalize %>
        </span>
      </div>
      <p class="text-slate-900 font-medium truncate">
        <%= activity[:expense_description] || "No description" %>
      </p>
      <div class="flex items-center justify-between mt-1">
        <span class="text-xs px-2 py-1 rounded-full"
              style="background-color: <%= activity[:category_color] %>20; color: <%= activity[:category_color] %>">
          <%= activity[:category_name] %>
        </span>
        <span class="text-xs text-slate-600">
          $<%= number_with_precision(activity[:expense_amount], precision: 2) %>
        </span>
      </div>
      <% if activity[:pattern_type] %>
        <div class="mt-1 text-xs text-slate-500">
          Pattern: <%= activity[:pattern_type] %> - <%= truncate(activity[:pattern_value], length: 30) %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if recent_activity.empty? %>
    <div class="text-center py-8 text-slate-500">
      No recent activity to display
    </div>
  <% end %>
</div>