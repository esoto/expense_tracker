<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold leading-tight text-slate-900">Cuentas de Correo</h1>
      <p class="mt-2 text-sm text-slate-700">Gestiona las cuentas de correo para sincronizar gastos automáticamente.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Nueva cuenta", new_email_account_path, class: "inline-flex items-center justify-center rounded-lg border border-transparent bg-teal-700 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-teal-800 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>

  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow-sm ring-1 ring-slate-200 md:rounded-xl">
          <table class="min-w-full divide-y divide-slate-200">
            <thead class="bg-slate-50">
              <tr>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-slate-900">Email</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-slate-900">Banco</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-slate-900">Proveedor</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-slate-900">Estado</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Acciones</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 bg-white">
              <% @email_accounts.each do |email_account| %>
              <tr class="hover:bg-slate-50">
                <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-900">
                  <%= email_account.email %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-500">
                  <%= email_account.bank_name %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-500">
                  <%= email_account.provider.capitalize %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm">
                  <% if email_account.active? %>
                  <span class="inline-flex rounded-full bg-emerald-100 px-2 text-xs font-semibold leading-5 text-emerald-800">Activa</span>
                  <% else %>
                  <span class="inline-flex rounded-full bg-slate-100 px-2 text-xs font-semibold leading-5 text-slate-800">Inactiva</span>
                  <% end %>
                </td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <%= link_to "Editar", edit_email_account_path(email_account), class: "text-teal-600 hover:text-teal-800" %>
                  <%= button_to "Eliminar", email_account_path(email_account), method: :delete, data: { turbo_confirm: "¿Estás seguro?" }, class: "ml-4 text-rose-600 hover:text-rose-800 inline" %>
                </td>
              </tr>
              <% end %>

              <% if @email_accounts.none? %>
              <tr>
                <td colspan="5" class="px-3 py-8 text-center text-sm text-slate-500">
                  No hay cuentas de correo configuradas. <%= link_to "Crear la primera cuenta", new_email_account_path, class: "font-medium text-teal-600 hover:text-teal-700" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>