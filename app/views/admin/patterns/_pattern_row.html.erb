<%= turbo_frame_tag dom_id(pattern, :row) do %>
  <tr class="hover:bg-slate-50">
    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
      <span class="px-2 py-1 text-xs rounded-full bg-slate-100 text-slate-700">
        <%= pattern.pattern_type.humanize %>
      </span>
    </td>
    <td class="px-6 py-4 text-sm text-slate-900">
      <div class="max-w-xs truncate" title="<%= pattern.pattern_value %>">
        <%= pattern.pattern_value %>
      </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
      <span class="px-2 py-1 text-xs rounded-full bg-teal-100 text-teal-700">
        <%= pattern.category.name %>
      </span>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
      <%= number_with_delimiter(pattern.usage_count) %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm">
      <div class="flex items-center">
        <div class="w-16 bg-slate-200 rounded-full h-2 mr-2">
          <div class="bg-<%= pattern.success_rate >= 0.7 ? 'emerald' : pattern.success_rate >= 0.4 ? 'amber' : 'rose' %>-500 h-2 rounded-full"
               style="width: <%= (pattern.success_rate * 100).round %>%"></div>
        </div>
        <span class="text-slate-700"><%= (pattern.success_rate * 100).round %>%</span>
      </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
      <span class="px-2 py-1 text-xs rounded-full bg-<%= pattern.confidence_weight >= 2 ? 'teal' : pattern.confidence_weight >= 1 ? 'slate' : 'amber' %>-100 text-<%= pattern.confidence_weight >= 2 ? 'teal' : pattern.confidence_weight >= 1 ? 'slate' : 'amber' %>-700">
        <%= pattern.confidence_weight.round(1) %>
      </span>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm">
      <%= button_to toggle_active_admin_pattern_path(pattern),
          method: :post,
          data: { turbo_method: :post },
          class: "inline-flex" do %>
        <% if pattern.active? %>
          <span class="px-2 py-1 text-xs rounded-full bg-emerald-100 text-emerald-700 cursor-pointer hover:bg-emerald-200">
            Active
          </span>
        <% else %>
          <span class="px-2 py-1 text-xs rounded-full bg-slate-100 text-slate-500 cursor-pointer hover:bg-slate-200">
            Inactive
          </span>
        <% end %>
      <% end %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
      <div class="flex space-x-2">
        <%= link_to admin_pattern_path(pattern),
            class: "text-teal-600 hover:text-teal-900",
            title: "View" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        <% end %>
        <%= link_to edit_admin_pattern_path(pattern),
            class: "text-amber-600 hover:text-amber-900",
            title: "Edit" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
        <%= link_to admin_pattern_path(pattern),
            method: :delete,
            data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure you want to delete this pattern?"
            },
            class: "text-rose-600 hover:text-rose-900",
            title: "Delete" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>