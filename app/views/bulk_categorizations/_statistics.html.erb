        <p class="text-sm text-slate-600"><%= t('bulk_categorizations.statistics.total_expenses') %></p>
        <p class="text-xl font-semibold text-slate-900"><%= statistics[:total_expenses] %></p>
      </div>
    </div>

    <!-- High Confidence -->
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0 p-3 bg-emerald-100 rounded-lg">
        <svg class="w-6 h-6 text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm text-slate-600"><%= t('bulk_categorizations.statistics.high_confidence') %></p>
        <p class="text-xl font-semibold text-slate-900"><%= statistics[:high_confidence_groups] %></p>
      </div>
    </div>

    <!-- Total Amount -->
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0 p-3 bg-slate-100 rounded-lg">
        <svg class="w-6 h-6 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm text-slate-600"><%= t('bulk_categorizations.statistics.total_amount') %></p>
        <p class="text-xl font-semibold text-slate-900">â‚¡<%= number_with_delimiter(statistics[:total_amount].to_i) %></p>
