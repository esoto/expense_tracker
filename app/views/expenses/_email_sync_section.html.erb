<!-- Email Sync Section -->
<div class="bg-white rounded-lg shadow p-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold text-gray-900">Sincronización de Correos</h2>
    <% if @last_sync_info[:has_running_jobs] %>
      <div class="flex items-center text-blue-600">
        <svg class="animate-spin -ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span class="text-sm font-medium">Sincronizando...</span>
      </div>
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Sync Controls -->
    <div class="space-y-4">
      <%= form_with url: sync_emails_expenses_path, method: :post, local: true, class: "space-y-4" do |form| %>
        <div class="flex flex-col space-y-2">
          <%= form.submit "Sincronizar Todos los Correos",
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 #{@last_sync_info[:has_running_jobs] ? 'opacity-50 cursor-not-allowed' : ''}",
              disabled: @last_sync_info[:has_running_jobs] %>
          <p class="text-xs text-gray-600">
            Busca nuevos gastos en todas las cuentas de correo activas
          </p>
        </div>
      <% end %>

      <% if @email_accounts.any? %>
        <!-- Individual Account Sync -->
        <div class="border-t pt-4">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Sincronizar cuenta individual:</h3>
          <div class="space-y-2">
            <% @email_accounts.each do |account| %>
              <%= form_with url: sync_emails_expenses_path, method: :post, local: true, class: "flex items-center space-x-2" do |form| %>
                <%= form.hidden_field :email_account_id, value: account.id %>
                <%= form.submit account.display_name.truncate(30),
                    class: "text-sm bg-gray-100 hover:bg-gray-200 text-gray-700 py-1 px-3 rounded transition-colors duration-200 #{@last_sync_info[:has_running_jobs] ? 'opacity-50 cursor-not-allowed' : ''}",
                    disabled: @last_sync_info[:has_running_jobs] %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="border-t pt-4">
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-800">
                  No hay cuentas de correo configuradas.
                  <%= link_to "Configurar cuenta", email_accounts_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sync Status -->
    <div class="space-y-4">
      <h3 class="text-sm font-medium text-gray-700">Estado de sincronización:</h3>
      <% if @email_accounts.any? %>
        <div class="space-y-3">
          <% @email_accounts.each do |account| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 <%= account.bank_name == 'BAC' ? 'bg-blue-100' : 'bg-gray-100' %> rounded-full flex items-center justify-center">
                    <span class="text-xs font-bold <%= account.bank_name == 'BAC' ? 'text-blue-600' : 'text-gray-600' %>">
                      <%= account.bank_name.first %>
                    </span>
                  </div>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= account.email %></p>
                  <p class="text-xs text-gray-600"><%= account.bank_name %></p>
                </div>
              </div>
              <div class="text-right">
                <% if @last_sync_info[account.id] %>
                  <p class="text-xs text-gray-600">
                    Último: <%= format_datetime(@last_sync_info[account.id][:last_sync]) %>
                  </p>
                  <div class="flex items-center mt-1">
                    <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
                    <span class="text-xs text-green-600">Activa</span>
                  </div>
                <% else %>
                  <p class="text-xs text-gray-600">Sin gastos</p>
                  <div class="flex items-center mt-1">
                    <div class="w-2 h-2 bg-gray-400 rounded-full mr-2"></div>
                    <span class="text-xs text-gray-600">Sin datos</span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-600">No hay cuentas de correo configuradas.</p>
      <% end %>

      <% if @last_sync_info[:has_running_jobs] %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
          <div class="flex items-center">
            <svg class="animate-spin h-4 w-4 text-blue-600 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-sm text-blue-800">
              <%= @last_sync_info[:running_job_count] %> sincronización<%= 'es' if @last_sync_info[:running_job_count] != 1 %> en progreso
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>