<%# Quick set budget turbo stream response %>
<%= turbo_stream.replace "quick_budget_modal" do %>
  <div id="quick_budget_modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 p-6">
      <h2 class="text-xl font-bold text-slate-900 mb-4">
        Establecer Presupuesto <%= t("budgets.periods.#{@period}", default: @period.humanize) %>
      </h2>

      <%= form_with model: @budget, url: budgets_path, local: false do |form| %>
        <%= form.hidden_field :period %>
        <%= form.hidden_field :currency %>
        <%= form.hidden_field :start_date %>
        <%= form.hidden_field :name %>
        <%= form.hidden_field :warning_threshold %>
        <%= form.hidden_field :critical_threshold %>

        <div class="mb-4">
          <%= form.label :amount, "Monto sugerido", class: "block text-sm font-medium text-slate-700 mb-1" %>
          <%= form.number_field :amount,
              value: @suggested_amount,
              class: "w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500",
              step: 1000 %>
          <p class="text-xs text-slate-500 mt-1">
            Basado en tu gasto promedio de los últimos períodos
          </p>
        </div>

        <div class="flex justify-end gap-2">
          <button type="button"
                  onclick="document.getElementById('quick_budget_modal').remove()"
                  class="bg-slate-200 hover:bg-slate-300 text-slate-700 font-medium px-4 py-2 rounded-lg transition-colors">
            Cancelar
          </button>
          <%= form.submit "Crear Presupuesto",
              class: "bg-teal-700 hover:bg-teal-800 text-white font-medium px-4 py-2 rounded-lg shadow-sm transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>