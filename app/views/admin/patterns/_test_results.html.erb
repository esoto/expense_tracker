<% if matching_patterns.any? %>
  <div class="space-y-3">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-semibold text-slate-700">
        <% count = matching_patterns.size %>
        Se <%= count == 1 ? 'encontró' : 'encontraron' %> <%= count %> <%= count == 1 ? 'patrón coincidente' : 'patrones coincidentes' %>
      </h3>
      <span class="text-xs text-slate-500">Ordenado por confianza</span>
    </div>

    <% matching_patterns.each_with_index do |match, index| %>
      <div class="border <%= index == 0 ? 'border-teal-200 bg-teal-50' : 'border-slate-200' %> rounded-lg p-4">
        <div class="flex justify-between items-start mb-2">
          <div>
            <span class="px-2 py-1 text-xs rounded-full bg-<%= match[:pattern].pattern_type == 'regex' ? 'rose' : 'slate' %>-100 text-<%= match[:pattern].pattern_type == 'regex' ? 'rose' : 'slate' %>-700">
              <%= match[:pattern].pattern_type.humanize %>
            </span>
            <% if index == 0 %>
              <span class="ml-2 px-2 py-1 text-xs rounded-full bg-teal-100 text-teal-700 font-semibold">
                Mejor Coincidencia
              </span>
            <% end %>
          </div>
          <div class="text-right">
            <div class="text-lg font-semibold text-slate-900">
              <%= (match[:confidence] * 100).round %>%
            </div>
            <div class="text-xs text-slate-500">confianza</div>
          </div>
        </div>

        <div class="mb-2">
          <span class="text-sm text-slate-600">Patrón:</span>
          <code class="ml-2 text-sm bg-white px-2 py-1 rounded"><%= match[:pattern].pattern_value %></code>
        </div>

        <div class="flex justify-between items-center">
          <div>
            <span class="text-sm text-slate-600">Categoría:</span>
            <span class="ml-2 px-2 py-1 text-xs rounded-full bg-teal-100 text-teal-700">
              <%= match[:category].name %>
            </span>
          </div>
          <div class="text-sm text-slate-500">
            Éxito: <%= (match[:pattern].success_rate * 100).round %>%
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4 p-4 bg-amber-50 border border-amber-200 rounded-lg">
    <div class="flex">
      <svg class="w-5 h-5 text-amber-600 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div class="text-sm text-amber-700">
        <p class="font-semibold">Categoría Sugerida: <%= matching_patterns.first[:category].name %></p>
        <p class="mt-1">Con <%= (matching_patterns.first[:confidence] * 100).round %>% de confianza basado en la coincidencia de patrones.</p>
      </div>
    </div>
  </div>
<% else %>
  <div class="text-center py-8">
    <svg class="w-12 h-12 text-slate-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <p class="text-slate-500 font-medium">No se encontraron patrones coincidentes</p>
    <p class="text-sm text-slate-400 mt-1">Intenta ajustar los datos de prueba o crea nuevos patrones</p>
  </div>
<% end %>