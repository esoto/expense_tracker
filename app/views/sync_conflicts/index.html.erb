<div class="min-h-screen bg-slate-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-slate-900">Conflictos de Sincronización</h1>
          <p class="mt-1 text-sm text-slate-600">
            Revisa y resuelve los conflictos detectados durante la sincronización
          </p>
        </div>
        
        <!-- Stats -->
        <div class="flex space-x-6">
          <div class="text-center">
            <p class="text-2xl font-semibold text-teal-700"><%= @stats[:pending] %></p>
            <p class="text-xs text-slate-600">Pendientes</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-semibold text-emerald-600"><%= @stats[:resolved] %></p>
            <p class="text-xs text-slate-600">Resueltos</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Filters and Actions Bar -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4 mb-6">
      <div class="flex items-center justify-between">
        <!-- Filters -->
        <div class="flex items-center space-x-4">
          <!-- Status Filter -->
          <div class="relative" data-controller="dropdown">
            <button class="inline-flex items-center px-4 py-2 border border-slate-300 rounded-lg text-sm font-medium text-slate-700 bg-white hover:bg-slate-50">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
              </svg>
              Estado
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
          </div>
          
          <!-- Type Filter -->
          <div class="relative" data-controller="dropdown">
            <button class="inline-flex items-center px-4 py-2 border border-slate-300 rounded-lg text-sm font-medium text-slate-700 bg-white hover:bg-slate-50">
              Tipo
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Bulk Actions -->
        <div class="flex items-center space-x-2" data-controller="bulk-actions" data-bulk-actions-url-value="<%= bulk_resolve_sync_conflicts_path %>">
          <button data-action="click->bulk-actions#selectAll" 
                  class="px-4 py-2 text-sm font-medium text-slate-700 hover:text-teal-700">
            Seleccionar todo
          </button>
          
          <button data-bulk-actions-target="resolveButton"
                  data-action="click->bulk-actions#bulkResolve"
                  class="hidden px-4 py-2 bg-teal-700 text-white rounded-lg text-sm font-medium hover:bg-teal-800 disabled:opacity-50"
                  disabled>
            Resolver seleccionados
          </button>
        </div>
      </div>
    </div>
    
    <!-- Conflicts List -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200">
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th scope="col" class="w-10 px-6 py-3">
                <input type="checkbox" data-bulk-actions-target="selectAll" 
                       class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-slate-300 rounded">
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Tipo
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Gastos en Conflicto
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Similitud
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Estado
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                Fecha
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Acciones</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-slate-200" id="conflicts_list">
            <% @conflicts.each do |conflict| %>
              <%= render 'conflict_row', conflict: conflict %>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if @conflicts.respond_to?(:total_pages) && @conflicts.total_pages > 1 %>
        <div class="bg-slate-50 px-4 py-3 border-t border-slate-200">
          <%= paginate @conflicts %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Conflict Resolution Modal -->
<div id="conflict_modal" class="hidden" data-controller="conflict-modal">
  <!-- Modal content will be loaded here -->
</div>