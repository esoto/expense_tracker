<!-- Bulk Operations Modal -->
<div id="bulk_operations_modal"
     class="fixed inset-0 z-50 hidden overflow-y-auto"
     data-controller="bulk-operations"
     data-bulk-operations-selected-ids-value="[]"
     data-bulk-operations-selected-count-value="0"
     data-bulk-operations-target="modal"
     aria-labelledby="bulk_operations_title"
     aria-hidden="true"
     role="dialog">
  <!-- Modal Overlay -->
  <div class="fixed inset-0 bg-slate-900 bg-opacity-50 transition-opacity opacity-0"
       data-bulk-operations-target="overlay"
       data-action="click->bulk-operations#close"></div>

  <!-- Modal Content -->
  <div class="flex min-h-screen items-center justify-center p-4">
    <div class="relative transform overflow-hidden rounded-xl bg-white shadow-xl transition-all translate-y-4 opacity-0 sm:w-full sm:max-w-2xl"
         data-bulk-operations-target="form">

      <!-- Modal Header -->
      <div class="bg-teal-700 px-6 py-4">
        <div class="flex items-center justify-between">
          <h3 id="bulk_operations_title" class="text-lg font-semibold text-white">
            Operaciones en Lote
          </h3>
          <button type="button"
                  data-bulk-operations-target="closeButton"
                  data-action="click->bulk-operations#close"
                  class="rounded-lg bg-teal-600 p-1 text-white hover:bg-teal-800 focus:outline-none focus:ring-2 focus:ring-white"
                  aria-label="Cerrar modal">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <p class="mt-1 text-sm text-teal-100">
          <span data-bulk-operations-target="selectedCount">0</span> gastos seleccionados
        </p>
      </div>

      <!-- Modal Body -->
      <div class="px-6 py-4">
        <!-- Operation Type Selection -->
        <div class="space-y-4">
          <h4 class="text-sm font-medium text-slate-700">Selecciona una operación:</h4>

          <div class="space-y-3">
            <!-- Categorize Option -->
            <label class="flex cursor-pointer items-start rounded-lg border border-slate-200 p-4 hover:bg-slate-50">
              <input type="radio"
                     name="operation_type"
                     value="categorize"
                     data-action="change->bulk-operations#changeOperation"
                     class="mt-1 h-4 w-4 text-teal-600 focus:ring-teal-500">
              <div class="ml-3 flex-1">
                <div class="flex items-center">
                  <svg class="mr-2 h-5 w-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                  </svg>
                  <span class="text-sm font-medium text-slate-900">Categorizar</span>
                </div>
                <p class="mt-1 text-sm text-slate-600">
                  Asignar una categoría a todos los gastos seleccionados
                </p>
              </div>
            </label>

            <!-- Status Update Option -->
            <label class="flex cursor-pointer items-start rounded-lg border border-slate-200 p-4 hover:bg-slate-50">
              <input type="radio"
                     name="operation_type"
                     value="status"
                     data-action="change->bulk-operations#changeOperation"
                     class="mt-1 h-4 w-4 text-teal-600 focus:ring-teal-500">
              <div class="ml-3 flex-1">
                <div class="flex items-center">
                  <svg class="mr-2 h-5 w-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-sm font-medium text-slate-900">Actualizar Estado</span>
                </div>
                <p class="mt-1 text-sm text-slate-600">
                  Cambiar el estado de todos los gastos seleccionados
                </p>
              </div>
            </label>

            <!-- Delete Option -->
            <label class="flex cursor-pointer items-start rounded-lg border border-slate-200 p-4 hover:bg-rose-50">
              <input type="radio"
                     name="operation_type"
                     value="delete"
                     data-action="change->bulk-operations#changeOperation"
                     class="mt-1 h-4 w-4 text-teal-600 focus:ring-teal-500">
              <div class="ml-3 flex-1">
                <div class="flex items-center">
                  <svg class="mr-2 h-5 w-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  <span class="text-sm font-medium text-slate-900">Eliminar</span>
                </div>
                <p class="mt-1 text-sm text-slate-600">
                  Eliminar permanentemente todos los gastos seleccionados
                </p>
              </div>
            </label>
          </div>
        </div>

        <!-- Operation-specific Options -->
        <!-- Categorize Options -->
        <div class="mt-6 hidden space-y-4"
             data-operation-type="categorize"
             data-bulk-operations-target="operationSection">
          <div>
            <label for="bulk_category" class="block text-sm font-medium text-slate-700">
              Seleccionar Categoría
            </label>
            <select id="bulk_category"
                    data-bulk-operations-target="categorySelect"
                    class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-teal-500 focus:ring-teal-500">
              <option value="">-- Selecciona una categoría --</option>
              <% Category.order(:name).each do |category| %>
                <option value="<%= category.id %>"><%= category.name %></option>
              <% end %>
            </select>
          </div>
        </div>

        <!-- Status Update Options -->
        <div class="mt-6 hidden space-y-4"
             data-operation-type="status"
             data-bulk-operations-target="operationSection">
          <div>
            <label for="bulk_status" class="block text-sm font-medium text-slate-700">
              Nuevo Estado
            </label>
            <select id="bulk_status"
                    data-bulk-operations-target="statusSelect"
                    class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-teal-500 focus:ring-teal-500">
              <option value="">-- Selecciona un estado --</option>
              <option value="pending">Pendiente</option>
              <option value="processed">Procesado</option>
              <option value="failed">Fallido</option>
              <option value="duplicate">Duplicado</option>
            </select>
          </div>
        </div>

        <!-- Delete Confirmation -->
        <div class="mt-6 hidden space-y-4"
             data-operation-type="delete"
             data-bulk-operations-target="operationSection">
          <div class="rounded-lg bg-rose-50 border border-rose-200 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-rose-800">
                  Advertencia: Los gastos eliminados se pueden restaurar desde el historial
                </h3>
                <div class="mt-2 text-sm text-rose-700">
                  <p>
                    Estás a punto de eliminar permanentemente <span data-bulk-operations-target="selectedCount" class="font-semibold">0</span> gastos.
                  </p>
                </div>
                <div class="mt-4">
                  <label class="flex items-center">
                    <input type="checkbox"
                           data-bulk-operations-target="confirmCheckbox"
                           data-action="change->bulk-operations#toggleDeleteConfirmation"
                           class="h-4 w-4 rounded border-rose-300 text-rose-600 focus:ring-rose-500">
                    <span class="ml-2 text-sm text-rose-700">
                      Confirmo que deseo eliminar estos gastos permanentemente
                    </span>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Progress Container -->
        <div class="mt-6 hidden" data-bulk-operations-target="progressContainer">
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-slate-600" data-bulk-operations-target="progressText">Procesando...</span>
              <span class="font-medium text-slate-900" data-bulk-operations-target="progressPercentage">0%</span>
            </div>
            <div class="h-2 overflow-hidden rounded-full bg-slate-200">
              <div class="h-full bg-teal-600 transition-all duration-300"
                   data-bulk-operations-target="progressBar"
                   style="width: 0%"></div>
            </div>
          </div>
        </div>

        <!-- Success Message -->
        <div class="mt-4 hidden rounded-lg bg-emerald-50 border border-emerald-200 p-4"
             data-bulk-operations-target="successMessage">
          <div class="flex">
            <svg class="h-5 w-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="ml-3 text-sm text-emerald-700"></p>
          </div>
        </div>

        <!-- Error Container -->
        <div class="mt-4 hidden rounded-lg bg-rose-50 border border-rose-200 p-4"
             data-bulk-operations-target="errorContainer">
          <div class="flex">
            <svg class="h-5 w-5 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-rose-800">Error al procesar la operación</h3>
              <ul class="mt-2 list-disc list-inside text-sm text-rose-700"
                  data-bulk-operations-target="errorList">
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal Footer -->
      <div class="bg-slate-50 px-6 py-4">
        <div class="flex justify-end gap-3">
          <button type="button"
                  data-bulk-operations-target="cancelButton"
                  data-action="click->bulk-operations#close"
                  class="rounded-lg bg-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-300 focus:outline-none focus:ring-2 focus:ring-slate-500">
            Cancelar
          </button>
          <button type="button"
                  data-bulk-operations-target="submitButton"
                  data-action="click->bulk-operations#submit"
                  disabled="disabled"
                  class="rounded-lg bg-teal-700 px-4 py-2 text-sm font-medium text-white hover:bg-teal-800 focus:outline-none focus:ring-2 focus:ring-teal-500 disabled:opacity-50 disabled:cursor-not-allowed">
            Ejecutar
          </button>
        </div>
      </div>
    </div>
  </div>
</div>