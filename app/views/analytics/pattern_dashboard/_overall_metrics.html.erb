<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
  <!-- Total Patterns -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-slate-600">Total Patterns</p>
        <p class="text-2xl font-bold text-slate-900 mt-1"><%= overall_metrics[:total_patterns] %></p>
        <p class="text-xs text-slate-500 mt-1">
          <span class="text-teal-600"><%= overall_metrics[:active_patterns] %></span> active
        </p>
      </div>
      <div class="bg-teal-100 p-3 rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </div>
    </div>
  </div>

  <!-- Overall Accuracy -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-slate-600">Overall Accuracy</p>
        <p class="text-2xl font-bold <%= overall_metrics[:overall_accuracy] >= 80 ? 'text-emerald-600' : overall_metrics[:overall_accuracy] >= 60 ? 'text-amber-600' : 'text-rose-600' %> mt-1">
          <%= overall_metrics[:overall_accuracy] %>%
        </p>
        <p class="text-xs text-slate-500 mt-1">
          <%= overall_metrics[:acceptance_rate] %>% acceptance
        </p>
      </div>
      <div class="bg-emerald-100 p-3 rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-emerald-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
  </div>

  <!-- Total Usage -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-slate-600">Total Usage</p>
        <p class="text-2xl font-bold text-slate-900 mt-1"><%= number_with_delimiter(overall_metrics[:total_usage]) %></p>
        <p class="text-xs text-slate-500 mt-1">
          <%= number_with_delimiter(overall_metrics[:total_success]) %> successful
        </p>
      </div>
      <div class="bg-amber-100 p-3 rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-amber-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
      </div>
    </div>
  </div>

  <!-- Average Confidence -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-slate-600">Avg Confidence</p>
        <p class="text-2xl font-bold text-slate-900 mt-1"><%= overall_metrics[:average_confidence] %></p>
        <p class="text-xs text-slate-500 mt-1">
          <%= overall_metrics[:feedback_count] %> feedbacks
        </p>
      </div>
      <div class="bg-rose-100 p-3 rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-rose-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
      </div>
    </div>
  </div>
</div>